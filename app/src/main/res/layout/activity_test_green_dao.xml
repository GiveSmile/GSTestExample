<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hs.administrator.test.view.activity.TestGreenDaoActivity">
    <EditText
        android:id="@+id/rt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入要插入数据库的数据"
        />
    <TextView
        android:id="@+id/rv_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="插入数据"/>
    <EditText
        android:id="@+id/et_session_conntent"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入要搜索的内容"
        />
    <TextView

        android:id="@+id/tv_session"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="查询数据"
        />
    <TextView
        android:id="@+id/tv_session_conntent"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/et_delete"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入要删除的数据"/>
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="点击删除"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_delete_all"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="删除所有数据"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_update"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="点击修改"/>
    <EditText
        android:id="@+id/et_update_qian"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入要修改的数据"/>
    <EditText
        android:id="@+id/et_update_hou"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入要修改成的数据"/>

</LinearLayout>
